<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <padding android:left="7dp" android:right="7dp" android:top="7dp" android:bottom="7dp" />
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B1B5BD" />
            <solid android:color="#B9BDC0"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <padding android:left="7dp" android:right="7dp" android:top="7dp" android:bottom="7dp" />
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B1B5BD" />
            <solid android:color="#CBD0D6"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <padding android:left="7dp" android:right="7dp" android:top="7dp" android:bottom="7dp" />
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B1B5BD" />
            <solid android:color="#D9E0E7"/>
        </shape>
    </item>
</selector>